    "@types/node": "^14.6.4",
    "@typescript-eslint/eslint-plugin": "^4.1.0",
    "@typescript-eslint/parser": "^4.1.0",
    "chai": "^4.2.0",
    "eslint": "^7.8.1",
    "eslint-plugin-mocha": "^8.0.0",
    "mocha": "^8.1.3",
    "parcel-bundler": "^1.12.4",
    "typescript": "^4.0.2"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
